<div class="qh__speeches-latest" aria-label="Speeches">
  <h2 class="qh__speeches-latest__title">
    {{ title }}

    {% if more_url %}
      <a class="qh__speeches-latest__all" href="{{ more_url }}">{{ more_title }}</a>
    {% endif %}
  </h2>

  <div class="qh__speeches-latest__list">
    {{ rows }}
  </div>

  {% if more_url %}
    <p class="qh__speeches-latest__all"><a href="{{ more_url }}" class="qh__btn">{{ more_title }}</a></p>
  {% endif %}
</div>
