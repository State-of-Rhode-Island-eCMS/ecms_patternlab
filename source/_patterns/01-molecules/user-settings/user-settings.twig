<div class="qh__settings-menu">
  <button id="js__user-settings__toggle" class="qh__u__btn-as-text qh__settings-menu__toggle" aria-expanded="false" aria-controls="js__user-settings__list">
    <span class="qh__settings-menu__icon" aria-hidden="true">
      {% include ('@icons/cog.svg') %}
    </span>
    {{ "User settings"|t }}
  </button>
  <ul id="js__user-settings__list" class="qh-u__list-reset qh__settings-menu__list" aria-labelledby="js__user-settings__toggle">
    {% if (language_switcher) %}
    <li class="settings__language">
      <label class="qh__settings-menu__label">{{ "Display site in"|t }}:</label>
      {{ language_switcher }}
    </li>
    {% endif %}
    <li class="settings__lightmode">
      <label class="qh__settings-menu__label">{{ "Light mode"|t }}:</label>
      <div class="qh__settings-menu__boolean">
        <button id="light_mode_switch" class="small-text qh__u__btn-as-text toggle-lightmode switch">{{ "Switch"|t }}</button>
        <button id="light_mode_reset" class="small-text qh__u__btn-as-text toggle-lightmode auto">{{ "Use system preference"|t }}</button>
      </div>
    </li>
    <li class="settings__fontsize">
      <label class="qh__settings-menu__label" for="font_size_modifier">{{ "Font size"|t }}:</label>
      <div class="qh__settings-menu__slider">
        <div class="qh__form__input__range">
          <input type="range" min="1" max="3" value="1" step="0.01" name="size" id="font_size_modifier" />
        </div>
        <div class="small-text settings__fontsize--value low">{{ "Original"|t }}</div>
        <div class="small-text settings__fontsize--value high">{{ "Larger"|t }}</div>
      </div>
    </li>
    <li class="settings__lineheight">
      <label class="qh__settings-menu__label" for="line_height_modifier">{{ "Line spacing"|t }}:</label>
      <div class="qh__settings-menu__slider">
        <div class="qh__form__input__range">
          <input type="range" min="1" max="3" value="1" step="0.01" name="lineheight" id="line_height_modifier" />
        </div>
        <div class="small-text settings__lineheight--value low">{{ "Original"|t }}</div>
        <div class="small-text settings__lineheight--value high">{{ "More"|t }}</div>
      </div>
    </li>
    <li class="settings__wordspace">
      <label class="qh__settings-menu__label" for="word_space_modifier">{{ "Word spacing"|t }}:</label>
      <div class="qh__settings-menu__slider">
        <div class="qh__form__input__range">
          <input type="range" min="0" max="2" value="1" step="0.01" name="wordspace" id="word_space_modifier" />
        </div>
        <div class="small-text settings__wordspace--value low">{{ "Original"|t }}</div>
        <div class="small-text settings__wordspace--value high">{{ "More"|t }}</div>
      </div>
    </li>
  </ul>
</div>
